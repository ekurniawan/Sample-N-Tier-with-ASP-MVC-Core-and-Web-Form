<div class="row">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Home Page</h1>
    </div>

    <div class="col-lg-12">
        <!-- Basic Card Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Home Page</h6>
            </div>
            <div class="card-body">
                Welcome to the home page of the application. This is the first page that the user will see when they log
                in.<br/>
                @ViewBag.Message
                @if(User.Identity.IsAuthenticated)
                {
                    <p>Username: @User.Identity.Name</p>
                }
            </div>
        </div>

    </div>

</div>
